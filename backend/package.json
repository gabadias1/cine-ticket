{
  "name": "cine-ticket-backend",
  "version": "0.1.0",
  "description": "Backend for CineTicket using Express + Prisma (SQLite)",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "seed": "npx prisma migrate reset --force && node scripts/seed.js",
    "init-db": "prisma generate && prisma migrate deploy",
    "sync:tmdb:max": "node scripts/syncMaximumMovies.js",
    "sync:ticketmaster:events": "node scripts/syncTicketmasterEvents.js",
    "diagnose:ticketmaster": "node scripts/diagnoseTicketmaster.js",
    "update:movies:pt": "node scripts/updateMoviesToPortuguese.js",
    "test:ticketmaster": "node scripts/testTicketmasterAPI.js"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "axios": "^1.12.2",
    "cine-ticket": "file:..",
    "cors": "^2.8.5",
    "debug": "^4.3.6",
    "dotenv": "^16.6.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.0",
    "prisma": "^6.19.0"
  }
}
